generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        String   @id @default(uuid())
  title     String
  author    String
  musicPath String
  imageUrl  String
  lyrics    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Schedule {
  id        String   @id @default(uuid())
  date      String
  title     String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
